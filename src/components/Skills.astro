---
interface Skill {
  name: string;
  iconUrl: string;
}

// 1. Lenguajes que usas en AMBOS lados
const coreLanguages: Skill[] = [
  { name: "JavaScript", iconUrl: "/assets/icons/javascript.svg" },
  { name: "TypeScript", iconUrl: "/assets/icons/typescript.svg" },
];

const frontendSkills: Skill[] = [
  {
    name: "HTML",
    iconUrl: "/assets/icons/html.svg",
  },
  {
    name: "CSS",
    iconUrl: "/assets/icons/css.svg",
  },
  {
    name: "React",
    iconUrl: "/assets/icons/react.svg",
  },
  {
    name: "tailwindcss",
    iconUrl: "/assets/icons/tailwindcss.svg",
  },
];

const backendSkills: Skill[] = [
  {
    name: "Node.js",
    iconUrl: "/assets/icons/node-js.svg",
  },
  {
    name: "Express.js",
    iconUrl: "/assets/icons/express.svg",
  },
  {
    name: "MySQL",
    iconUrl: "/assets/icons/mysql.svg",
  },
  {
    name: "PostgreSQL",
    iconUrl: "/assets/icons/pgsql.svg",
  },
];

const softSkills: string[] = [
  "Responsabilidad y compromiso",
  "Adaptabilidad a nuevos retos",
  "Trabajo en equipo",
  "Comunicación efectiva",
  "Aprendizaje constante",
];

import type { AstroComponentFactory } from "astro/runtime/server/index.js";
import GitHub from "../components/icons/skills/Github.astro";
import Git from "../components/icons/skills/Git.astro";

type AstroComponent = AstroComponentFactory;

const IconMap: Record<string, AstroComponent> = {
  Git: Git,
  GitHub: GitHub,
};

const toolsSkills = ["Git", "GitHub"];
---

<section id="skills" class="py-20 px-6 bg-gray-900 text-gray-200">
  <div class="max-w-6xl mx-auto flex flex-col gap-8">
    <!-- titulo -->
    <div class="text-center">
      <h2
        class="inline-block font-hero text-4xl font-bold text-white border-b-4 border-blue-500 pb-2"
      >
        Habilidades
      </h2>
      <p class="text-gray-400 mt-4 font-sans">
        Tecnologías que utilizo para construir soluciones Fullstack
      </p>
    </div>

    <div
      class="bg-white/5 p-6 rounded-3xl border border-white/10 md:min-w-100 md:mx-auto lg:min-w-140"
    >
      <h3 class="font-bold font-hero mb-6 flex items-center gap-2">
        Lenguajes
      </h3>
      <div class="grid grid-cols-2 justify-center gap-6 w-auto">
        {
          coreLanguages.map((s) => (
            <div class="flex flex-col items-center p-3 bg-white/5 rounded-xl border border-white/5 hover:border-white/20 transition">
              <img src={s.iconUrl} class="w-12 h-12 mb-2" alt={s.name} />
              <span class="text-sm text-gray-400">{s.name}</span>
            </div>
          ))
        }
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
      <div class="bg-white/5 p-6 rounded-3xl border border-white/10">
        <h3 class="font-bold font-hero mb-6 flex items-center gap-2">
          Frontend
        </h3>
        <div class="grid grid-cols-2 gap-4">
          {
            frontendSkills.map((s) => (
              <div class="flex flex-col items-center p-3 bg-white/5 rounded-xl border border-white/5 hover:border-white/20 transition">
                <img src={s.iconUrl} class="w-12 h-12 mb-2" alt={s.name} />
                <span class="text-sm text-gray-400">{s.name}</span>
              </div>
            ))
          }
        </div>
      </div>

      <div class="bg-white/5 p-6 rounded-3xl border border-white/10">
        <h3 class="font-bold font-hero mb-6 flex items-center gap-2">
          Backend
        </h3>
        <div class="grid grid-cols-2 gap-4">
          {
            backendSkills.map((s) => (
              <div class="flex flex-col items-center p-3 bg-white/5 rounded-xl border border-white/5 hover:border-white/20 transition">
                <img src={s.iconUrl} class="w-12 h-12 mb-2" alt={s.name} />
                <span class="text-sm text-gray-400">{s.name}</span>
              </div>
            ))
          }
        </div>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
      <div class="bg-white/5 p-6 rounded-3xl border border-white/10 flex-1">
        <h3 class="font-bold font-hero mb-6">Herramientas</h3>
        <div class="grid grid-cols-2 gap-4">
          {
            toolsSkills.map((t) => {
              const Componente = IconMap[t];
              return (
                <div class="flex flex-col items-center p-3 bg-white/5 rounded-xl border border-white/5 hover:border-white/20 transition">
                  <div class="w-12 h-12 mb-2">
                    <Componente />
                  </div>
                  <span class="text-sm text-gray-400">{t}</span>
                </div>
              );
            })
          }
        </div>
      </div>

      <div
        class="bg-linear-to-br from-blue-600/20 to-transparent p-6 rounded-3xl border border-blue-500/20"
      >
        <h3 class="font-bold font-hero mb-4 italic text-blue-300">
          Soft Skills
        </h3>
        <ul class="space-y-2">
          {
            softSkills.map((ss) => (
              <li class="flex items-center gap-2 text-sm text-gray-300 font-sans">
                <span class="text-blue-400">✦</span> {ss}
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
