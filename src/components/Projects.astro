      "Arquitectura de datos sólida",
      "Manejo de inventario multi-sucursal",
      "Sistemas POS reales",
      "Reportes y dashboards",
    ],
  },
];
---

<section id="projects" class="py-20 px-4 bg-slate-950 text-gray-200">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <h2
        class="inline-block font-hero text-3xl font-bold border-b-4 border-blue-500 pb-2 text-white"
      >
        Proyectos Académicos
      </h2>
    </div>

    <div class="flex flex-col gap-20">
      {
        projects.map((p, index) => (
          <div
            class={`flex flex-col lg:flex-row gap-10 items-center ${index % 2 !== 0 ? "lg:flex-row-reverse" : ""}`}
          >
            <div class="w-full lg:w-3/5 rounded-2xl overflow-hidden shadow-2xl border border-gray-800 bg-gray-900/50 p-2">
              <Carrusel images={p.images} />
            </div>

            <div class="w-full lg:w-2/5">
              <div class="flex flex-wrap gap-2 mb-4">
                {p.tecnologies.map((t) => (
                  <span class="bg-blue-900/30 text-blue-400 border border-blue-800/50 px-3 py-1 rounded-full text-xs font-medium">
                    {t}
                  </span>
                ))}
              </div>

              <h3 class="text-2xl font-hero font-semibold mb-4 text-white uppercase tracking-tight">
                {p.title}
              </h3>

              <p class="text-gray-400 mb-6 leading-relaxed font-sans">
                {p.descripcion}
              </p>

              <ul class="space-y-2 mb-8 font-sans text-gray-400">
                {p.features?.map((feature) => (
                  <li class="flex items-center text-sm">
                    <span class="mr-2 text-blue-500">▹</span> {feature}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
