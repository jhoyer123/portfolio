}

const projects: project[] = [
  {
    title: "Sistema de Gestión de Edificios",
    tecnologies: ["Node.js", "Express", "React", "MySQL", "Git", "GitHub"],
    descripcion:
      "Sistema web integral para la administración de edificios, que permite gestionar residentes, personal, áreas comunes, pagos y facturación. Incluye autenticación segura con control de roles y 2FA, módulo de reservas con validación de horarios, pagos mediante QR y generación automática de facturas. El sistema cuenta con un dashboard con métricas clave sobre el estado financiero y operativo del edificio, además de gestión de anuncios y comunicación interna según el rol del usuario.",
    images: imagesp1,
    features: [
      "Modelado de datos complejo",
      "Control de roles y permisos",
      "Lógica de negocio real (pagos, reservas, facturación)",
      "Dashboards y métricas",
    ],
  },
  {
    title: "Sistema de inventario con punto de venta",
    tecnologies: ["React", "Supabase", "Git", "GitHub"],
    descripcion:
      "Sistema desarrollado con arquitectura de datos robusta para gestionar productos y ventas de manera eficiente. Incluye funcionalidades como control de stock, generación de recibos de venta, y reportes detallados de ventas e inventario. La interfaz es intuitiva y fácil de usar, facilitando la operación diaria del negocio ademas el sistema es multisucrsal con informacion especifica o global gestion de usuarios y roles moviemietnos de transferencia entre sucrusaels stock productos por sucursal dashboard con metricas de ventas y deudas pendientes diarios y mesual cuenta con un pos intuitivo el manejo de usuarios es para empleados direferenciados por roles.",
